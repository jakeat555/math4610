#include<cmath>
void abserr(double &eps, double x, double xe){
	eps = abs(x - xe);
}

void smaceps(float &seps, int &ipow){
	float one = 1.0;
	float eps = 1.0;
	ipow = -1;
	
	//iterate many times to find the eps closest to 1.0
	for(int i = 0; i <1000; i++){
		float appone = one + eps;
		double diff;
		abserr(diff,appone,one);
		if(diff == 0.0){
			i=1000;
		}
		seps = diff;
		eps *= .5;
		ipow++;
	}
}
